<?xml version="1.0" encoding="UTF-8" ?>
<mapping-table>
  <!-- Mappings for DDI metadata version 1.2.2. -->
  <namespaces>
  </namespaces>
  <mappings>
    <field name="Creator">
		 <xpath>//codeBook/stdyDscr/citation/prodStmt/producer/text()</xpath>
    </field>
    <field name="Contributor">
		<xpath>//codeBook/stdyDscr/citation/prodStmt/producer[@role = 'contributor']/text()</xpath>
    </field>
    <field name="Language">
    </field>

    <!-- The date field is unstructured. A date unifying function will be implemented later. -->
    <field name="CreationDate">
      <xpath>//codeBook/docDscr/citation/prodStmt/prodDate/@date</xpath>
      <xpath>//codeBook/docDscr/citation/prodStmt/prodDate/text()</xpath>
    </field>
    <field name="Format">
      <xpath>//codeBook/fileDscr//fileType//text()</xpath>
	  <xpath>//codeBook/fileDscr//format//text()</xpath>
    </field>
    <field name="Discipline">
    </field>
    <field name="Collection">
		<xpath>//codeBook/stdyDscr/citation/serStmt/serName/text()</xpath>
    </field>
    <field name="Country">
      <xpath>//codeBook/stdyDscr/stdyInfo/sumDscr/nation/text()</xpath>
    </field>

    <field name="title">
      <xpath>//codeBook/docDscr/citation/titlStmt/titl/text()</xpath>
      <string>(untitled)</string>
    </field>
    <field name="notes">
      <xpath>//codeBook/stdyDscr/stdyInfo/abstract/text()</xpath>
    </field>

    <field name="url">
    </field> 
    <field name="MetadataSource">
      <string expand="true">${filename}</string>
    </field>

    <field name="fulltext">
      <xpath>normalize-space(string(/))</xpath>
    </field>
  </mappings>
</mapping-table>
