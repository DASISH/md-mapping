<?xml version="1.0" encoding="UTF-8" ?>
<mapping-table>
    <!-- Mappings for DataCite -->
    <namespaces>
        <namespace ns="d" uri="http://datacite.org/schema/kernel-3"/>
    </namespaces>
    <mappings>
        <field name="Creator">
            <xpath></xpath>
        </field>
        <field name="Contributor">
        </field>
        <field name="Language">
            <xpath>/d:resource/d:language</xpath>
        </field>
        <field name="CreationDate">
        </field>
        <field name="Format">
            <xpath>/d:resource/d:formats/d:format</xpath>
        </field>
        <field name="Discipline">
        </field>
        <field name="Collection">
        </field>
        <field name="Country">
        </field>
        <field name="title">
            <xpath>/d:resource/d:titles/d:title</xpath>
        </field>
        <field name="notes">
        </field>
        <field name="url">
            <xpath>concat("http://doi.org/", /d:resource/d:identifier[@identifierType="DOI"])</xpath>
        </field>
        <field name="MetadataSource">
            <string expand="true">${filename}</string>
        </field>
        <field name="fulltext">
            <xpath>normalize-space(string(/))</xpath>
        </field>        
    </mappings>
</mapping-table>